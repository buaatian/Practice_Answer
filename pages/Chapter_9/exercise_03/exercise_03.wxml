<view class="container">
  <view class="page-head">
    <view class="page-head-title">map组件练习</view>
    <view class="page-head-line"></view>
  </view>

  <view class="page-body">
    <view class="page-section page-section-gap">
      <map
        style="width: 100%; height: 300px;"
        latitude="{{latitude}}"
        longitude="{{longitude}}"
        scale="16"
        markers="{{markers}}"
        covers="{{covers}}"
      >
      </map>
    </view>
  </view>
</view>

